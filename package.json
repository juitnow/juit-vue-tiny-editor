{
  "name": "@juit/vue-tinyedit",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "npm run check && vite build",
    "check": "vue-tsc --build --force && eslint",
    "deploy-dev": "wrangler deploy",
    "deploy-prod": "wrangler deploy --env=production",
    "dev": "vite",
    "preview": "vite preview",
    "test": "vitest",
    "updates": "rm -rf node_modules package-lock.json && npx @juit/check-updates && npm install"
  },
  "peerDependencies": {
    "vue": "^3.5.12"
  },
  "devDependencies": {
    "@plugjs/eslint-plugin": "^0.2.22",
    "@types/node": "<21",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitest/coverage-v8": "^2.1.3",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.13.0",
    "eslint-plugin-vue": "^9.29.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0",
    "vitest": "^2.1.3",
    "vue": "^3.5.12",
    "vue-tsc": "^2.1.6"
  }
}
