    "eslint-plugin-vue": "^9.30.0",
    "jsdom": "^25.0.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-dts": "^4.3.0",
    "vite-svg-loader": "^5.1.0",
